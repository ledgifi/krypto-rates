{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2019", // Node.js 10
    "module": "commonjs",
    "lib": ["es2019"],
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "packages",
    "paths": {
      "@raptorsystems/krypto-rates-common/*": ["common/src/*"],
      "@raptorsystems/krypto-rates-core/*": ["core/src/*"],
      "@raptorsystems/krypto-rates-server/*": ["server/src/*"],
      "@raptorsystems/krypto-rates-sources": ["sources/src"],
      "@raptorsystems/krypto-rates-sources/*": ["sources/src/*"],
      "@raptorsystems/krypto-rates-utils": ["utils/src/"],
      "@raptorsystems/krypto-rates-utils/*": ["utils/src/*"]
    },
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true
  }
}
