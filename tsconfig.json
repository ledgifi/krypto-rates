{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2019", // Node.js 10
    "module": "commonjs",
    "lib": ["es2019"],
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true
  }
}
